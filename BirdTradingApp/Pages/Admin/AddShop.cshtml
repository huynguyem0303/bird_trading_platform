@page
@model BirdTradingApp.Pages.Admin.AddShopModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    var ErrorEmail = ViewData["EmailError"]?.ToString();
}
<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Add Shop</h1>
    </div>
</div>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="text" id="email" class="form-control" asp-for="AddShopDTO.Email" required>
            @if (!string.IsNullOrWhiteSpace(ErrorEmail))
            {
                <div class="alert alert-warning" role="alert">
                    @ErrorEmail
                </div>
            }
        </div>
        <div class="form-group">
            <label for="customerName" class="form-label"> Name</label>
            <input type="text" class="form-control" id="customerName" pattern=".*[^ ].*" asp-for="AddShopDTO.Name" required>
        </div>
        <div class="form-group">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" pattern=".*[^ ].*" asp-for="AddShopDTO.Address" required>
        </div>
        <div class="form-group">
            <label for="avt" class="form-label">Avatar</label>
            <input type="text" class="form-control" id="address" pattern=".*[^ ].*" asp-for="AddShopDTO.AvatarUrl" required>
        </div>
        <div class="form-group">
            <label for="shop" class="form-label">Phone</label>
            <input type="number" class="form-control" id="city" pattern=".*[^ ].*" asp-for="AddShopDTO.Phone" required>
        </div>
        <div class="form-group">
            <label for="country" class="form-label">Description</label>
            <input type="text" class="form-control" pattern=".*[^ ].*" id="country" asp-for="AddShopDTO.Description" required>
        </div>
        <div class="form-group">
            <label for="User" class="form-label">Select Shop Owner</label>
            <select id="staffDropdown" class="form-control" asp-for="AddShopDTO.UserId">
                <option value="">Select a ShopOwner</option>
                @foreach (var user in Model.Users)
                {
                    <option value="@user.Id">@user.Email</option>
                }
            </select>
        </div>
        <div class="form-group" style="margin-top : 20px">
            <button class="btn btn-primary" type="submit" font-weight="bold">Add</button>
        </div>
    </form>
</div>

