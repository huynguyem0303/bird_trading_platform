@page "{id:int}"
@model BirdTradingApp.Pages.Admin.EditShopModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Update Shop</h1>
    </div>
</div>
<div class="container">
    <form method="post">
        <input type="text" id="idShop" hidden asp-for="AddShopDTO.Id" />
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="text" id="email" class="form-control" asp-for="AddShopDTO.Email" readonly required>
        </div>
        <div class="form-group">
            <label for="customerName" class="form-label"> Name</label>
            <input type="text" class="form-control" id="customerName" pattern=".*[^ ].*" asp-for="AddShopDTO.Name" required>
        </div>
        <div class="form-group">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" pattern=".*[^ ].*" asp-for="AddShopDTO.Address" required>
        </div>
        <div class="form-group">
            <label for="avt" class="form-label">Avatar</label>
            <input type="text" class="form-control" id="address" pattern=".*[^ ].*" asp-for="AddShopDTO.AvatarUrl" required>
        </div>
        <div class="form-group">
            <label for="shop" class="form-label">Phone</label>
            <input type="number" class="form-control" id="city" pattern=".*[^ ].*" asp-for="AddShopDTO.Phone" required>
        </div>
        <div class="form-group">
            <label for="country" class="form-label">Description</label>
            <input type="text" class="form-control" pattern=".*[^ ].*" id="country" asp-for="AddShopDTO.Description" required>
        </div>
        <div class="form-group">
            <label for="IsBlocked" class="form-label">Account Status</label>
            <select id="staffDropdown2" class="form-control" asp-for="AddShopDTO.IsBlocked">
                <option value="">Select a status</option>
                @foreach (var status in Model.AccountStatus)
                {
                    @if (status == Model.AddShopDTO.IsBlocked)
                    {
                        <option value="@status" checked>@(@status == true ? "IsBlocked" : "Active")</option>
                    }
                    @if (status != Model.AddShopDTO.IsBlocked)
                    {
                        <option value="@status">@(@status == true ? "IsBlocked" : "Active")</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label for="User" class="form-label">Select Shop Owner</label>
            <select id="staffDropdown" class="form-control" asp-for="AddShopDTO.UserId">
                <option value="">Select a ShopOwner</option>
                @foreach (var user in Model.Users)
                {
                    @if(user.Id == Model.AddShopDTO.Id)
                    {
                        <option value="@user.Id" checked>@user.Email</option>
                    }
                    @if (user.Id != Model.AddShopDTO.Id)
                    {
                        <option value="@user.Id">@user.Email</option>
                    }
                }
            </select>
        </div>
        <div class="form-group" style="margin-top : 20px">
            <button class="btn btn-primary" type="submit" font-weight="bold">Update</button>
        </div>
    </form>
</div>
