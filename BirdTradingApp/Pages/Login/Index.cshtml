@page
@model BirdTradingApp.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/img/logo/logo.png"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Bird Shop</h4>
                                </div>

                                <form method="post">
                                    <h5 class="mb-4">Please login to your account</h5>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="LoginModel.UserName">Email</label>
                                        <input type="email" asp-for="LoginModel.UserName" class="form-control"
                                               placeholder="Phone number or email address" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="LoginModel.Password">Password</label>
                                        <input type="password" asp-for="LoginModel.Password" class="form-control" />
                                    </div>

                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Log in
                                        </button>
                                        <a class="text-muted" href="#!">Forgot password?</a>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2 mr-3">Don't have an account?</p>
                                        <button type="submit" class="btn btn-outline-danger" asp-page-handler="CreateNew">Create new</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a company</h4>
                                <p class="small mb-0">
                                    Welcome to Bird Shop, your premier online destination for all things ornamental birds and exquisite avian treasures. Step into a world of beauty and fascination as we bring you a curated collection of stunning feathered companions and a wide array of specialized products. <br /><br />

                                    At Bird Shop, we prioritize the health and happiness of our feathered friends. That's why we work closely with reputable breeders and suppliers who adhere to ethical practices and provide proper care throughout the birds' lives. Rest assured, every bird you find on our website has been raised in a loving environment and receives the utmost attention to ensure their welfare.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>